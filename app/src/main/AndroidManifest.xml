<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidExerciseSubmission"
        tools:targetApi="31">
        <activity
            android:name=".CustomNavigationDrawerActivity"
            android:exported="false"
            android:label="@string/title_activity_custom_navigation_drawer"
            android:theme="@style/Theme.AndroidExerciseSubmission.NoActionBar" />
        <activity
            android:name=".CustomTabLayout"
            android:exported="false"
            android:label="@string/title_activity_custom_tab_layout"
            android:theme="@style/Theme.AndroidExerciseSubmission.NoActionBar" />
        <activity
            android:name=".CustomViewModelActivity"
            android:exported="false" />
        <activity
            android:name=".CustomBottomNavigationBarActivity"
            android:exported="false"
            android:label="@string/title_activity_custom_bottom_navigation_bar" />
        <activity
            android:name=".CustomRetrofitActivity"
            android:exported="false" />
        <activity
            android:name=".CustomAppBarActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppOnBackgroundWhite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>